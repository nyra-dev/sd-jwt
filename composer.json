{
    "name": "nyra/sd-jwt",
    "description": "Selective Disclosure for JWTs (SD-JWT) issuer, holder, and verifier tooling",
    "keywords": [
        "jwt",
        "sd-jwt",
        "selective-disclosure",
        "oauth"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "nyra/jwt": "^1.0.0-alpha.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "Nyra\\SdJwt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nyra\\SdJwt\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "René Preuß",
            "email": "rene@preuss.io"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text"
    },
    "config": {
        "sort-packages": true
    }
}
